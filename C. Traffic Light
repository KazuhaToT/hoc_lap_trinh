#include<bits/stdc++.h>
using namespace std;

void sovle(){
    int n;cin>>n;
    char key; cin>>key;
    string s; cin>>s;
    if(key=='g')cout<<'0'<<endl;
    else{
    vector <int> g;
    vector <int> xuatphat;
    for(int i=0;i<s.length();i++){
        if(s[i]==key) xuatphat.push_back(i);
        if(s[i]=='g') g.push_back(i);
    }
    // for(int i=0;i<xuatphat.size();i++) cout<<xuatphat[i]<<' ';
    // for(int i=0;i<g.size();i++)cout<<g[i]<<' ';
    int kc=0;
    int a=0,b=0;
    int left=xuatphat[a];
    int right=g[b];
    while(a<xuatphat.size()){
        left=xuatphat[a];
        while(left>right){
            b++;
            if(b<g.size())right=g[b];
            else break;
        }
        if(left<right)kc=max(kc,right-left);
        if(left>right){a++;
        break;}
        a++;
    }
    
        if(xuatphat[a-1]>g[g.size()-1]){
            kc=max(kc,n-(xuatphat[a-1]-g[0]));
        }
    // cout<<endl<<a<<'-'<<b;
    // cout<<endl<<kc<<' '<<left<<'-'<<right<<endl;
    cout<<kc<<endl;
    }
}
int main(){
    int t; cin>>t;
    while(t--){
        sovle();
    }
    return 0;
}
